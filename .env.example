# Required for API access
COINBASE_API_KEY=
COINBASE_API_SECRET=

# Optional: set to false to allow real orders (default true = dry run, no orders)
DRY_RUN=true
# Optional: must be true with DRY_RUN=false to place real orders (default false)
ALLOW_LIVE=false

# Optional: GUI window (default on). Set false for no window.
# UI_ENABLED=true

# Optional: tune intervals (defaults shown)
# LEARN_DAYS=60
# LEARN_INTERVAL_SECONDS=86400
# POLL_INTERVAL_SECONDS=60
# STATUS_REFRESH_SECONDS=15   # how often price/market data in UI updates between full checks
# ORDER_COOLDOWN_SECONDS=300

# Optional: log level DEBUG, INFO, WARNING, ERROR (default INFO)
# LOG_LEVEL=INFO

# Optional: fee % per trade side in backtest (default 0); e.g. 0.5 for 0.5%
# LEARN_FEE_PCT=0
